<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.douzone.dzfinal.repository.DidRepository">
	
	
	<select id="getDidVideo" resultType="com.douzone.dzfinal.dto.DidDTO$getDidVideo">
		select * from DID_type dt;
	</select>
	
	<select id="getDidSubtitle" resultType="com.douzone.dzfinal.dto.DidDTO$getDidSubtitle">
		SELECT 
			*
		FROM 	DID_subtitle ds
		WHERE   ds.active = 1;
	</select>
	
	<select id="getDidMessage" resultType="com.douzone.dzfinal.dto.DidDTO$DID_subtitle">
		SELECT * FROM DID_subtitle
	</select>
	
	<insert id="insertDidMessage" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO DID_subtitle(`message`, `active`) VALUES (#{message}, #{active})
	</insert>
	
	<insert id="did_Setting">
		INSERT INTO DID_type(`type`, `video_name`, `video_real_name`) VALUES (#{type}, #{video_name}, #{video_real_name})
	</insert>
	
	<update id="toggleActive">
		UPDATE DID_subtitle SET active = #{active} WHERE id = #{id}
	</update>
	
	<update id="updateMessage">
		UPDATE DID_subtitle SET message = #{message} WHERE id = #{id}
	</update>
</mapper>